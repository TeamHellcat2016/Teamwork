   {{#if data.length}}
   {{#each data}}
    <li class="restaurant" data-id="{{_id}}">
        <div class="container">
            <div class="row">
                <div class="restaurant-image col-md-2">
                    <img src="{{image._downloadURL}}" class="img-responsive center-block" alt="">
                </div>
                <div class="main-info col-md-5">
                    <h3><a href="#/restaurant/{{_id}}" id="restaurant-profile"><strong>{{name}}</strong></a></h3>
                    <p class="bigger-font">{{type}}</p>
                    <div class="bottom-align-text">
                        <p>
                            Cuisine:
                            {{#each cuisine}}
                                <span> {{this}} </span>
                            {{/each}}
                        </p>
                        <p class="top-margin">{{city}}</p>
                    </div>
                </div>
                <div class="side-info col-md-5">
                    <div class="rating-info">
                        <img src="./images/star.png" class="img-responsive star-image">
                        <span>{{rating}}/5 stars</span>
                    </div>
                    <button class="add-to-favourites btn btn-warning">Add to favourites</button>
                    <button class="btn-info btn btn-warning">Description</button>
                    <button class="btn-comments btn btn-warning">Comments</button>
                </div>
            </div>
            <div class="row desc"></div>
            <div class="row comments"></div>
        </div>

    </li>
    {{/each}} 
    {{else}}
      <h3>No restaurant or caf√©s to show.</h3>
    {{/if}}